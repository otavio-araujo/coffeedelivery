{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@utils/*": ["./src/utils/*"],
      "@types/*": ["./src/@types/*"],
      "@assets/*": ["./src/assets/*"],
      "@routes/*": ["./src/routes/*"],
      "@styles/*": ["./src/styles/*"],
      "@screens/*": ["./src/screens/*"],
      "@contexts/*": ["./src/contexts/*"],
      "@components/*": ["./src/components/*"]
    }
  }
}
